{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "baseUrl": "./",
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "sourceMap": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": [
        ".git",
        ".cache",
        "node_modules",
        "logs",
        "**/*.d.ts"
    ]
}